<configuration>

  <!-- *********************************** -->
  <!--                                     -->
  <!--  Llama Admin Config                 -->
  <!--                                     -->
  <!-- *********************************** -->

  <property>
    <name>llamaadmin.server.thrift.address</name>
    <value>localhost:15002</value>
    <description>
      The admin address of the LlamaAM server to connect to.
      If the port is not specified, the default port is 15002.
    </description>
  </property>
  <property>
    <name>llama.am.server.thrift.secure</name>
    <value>false</value>
    <description>
      Indicates if security is enabled or not. If enabled, llamaadmin uses
      Kerberos Thrift SASL.
    </description>
  </property>

</configuration>
